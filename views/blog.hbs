       {{#if isLogin}}
        <div style="text-align:right; margin-right: 130px; margin-top: 50px">
          <a href="/add-blog" style="background: linear-gradient(rgb(6, 109, 134),rgb(0, 62, 78)); color: azure; padding: 7px 20px; border-radius: 5px; text-decoration:none">Add New Blogs</a>
        </div>
      {{/if}}

      <div id="contents" class="blog-list">

        <!-- dynamic content would be here -->
        {{#each blogs}}
        <div class="blog-list-item">
          <div class="blog-image">
            <img src={{this.image}} alt="" />
          </div>

          <div class="blog-content">
            {{#if isLogin}}
              <div class="btn-group">
                <a href="/edit-blog/{{this.id}}" class="btn-edit">Edit Post</button>
                <a href="/delete-blog/{{this.id}}" class="btn-post">Delete Blog</button>
              </div>
            {{/if}}

            <h1>
              <a href="/blog-detail/{{this.id}}" target="_blank"
                >{{this.title}}</a
              >
            </h1>

            <div class="detail-blog-content">
              {{this.postAt}} | {{this.author}}
            </div>

            <p>
              {{this.content}}
            </p>
            <div style="text-align: right;">
              <span >{{this.postAtDistance}}</span>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
