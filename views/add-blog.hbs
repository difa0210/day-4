        <!-- Form -->
        <div class="container-fluid d-flex align-items-center justify-content-center">
            <div class="container-form">

                <p class="h2 text-center">Create Blog Post</p>
                
                <form action="/blog" method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="inputTitle" class="form-label">Title</label>
                        <input type="text" name="inputTitle" class="form-control" id="inputTitle" placeholder="Input Title">
                    </div>

                    <div class="mb-3">
                        <label for="inputContent" class="form-label">Content</label>
                        <textarea name="inputContent" class="form-control" id="inputContent" rows="4"></textarea>
                    </div>                    
                        
                    <div class="mb-3">
                        <label for="inputImage" class="form-label">Upload Image</label>
                         <input type="file" name="inputImage" class="form-control" id="inputImage" placeholder="Input Image">
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn bg-color text-color">Submit</button>
                    </div>

                </form>
            </div>
