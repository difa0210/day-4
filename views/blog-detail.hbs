<html>
  <head>
    <title>Creating Blog Page - detail</title>
    <link rel="stylesheet" href="../public/assets/css/style.css" />
  </head>
  <body>
    <!-- NavBar -->
    <nav>
      <div class="left">
        <a href="/">
          <img src="../public/assets/images/Logo difa-01-01.jpg" alt="logo" />
        </a>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/blog">Blog</a>
          </li>
        </ul>
        {{#if isLogin}}
      <ul class="navbar-nav">
        <li class="nav-item px-3">
          <span class="nav-link" href="/login"> Hello {{user.name}} </span>
        </li>
        <li class="nav-item px-3">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
      {{else}}
      <ul class="navbar-nav">
        <li class="nav-item px-3">
          <a class="nav-link"  href="/register">Register</a>
        </li>
        <li class="nav-item px-3">
          <a class="nav-link"  href="/login">Login</a>
        </li>
      </ul>
      {{/if}}
      </div>
      <div class="right">
        <a href="/contact"> Contact Me </a>
      </div>
    </nav>

    <!-- Blog -->
    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{blog.title}}</h1>
        <div class="author">{{blog.postAt}} | {{blog.author}}</div>
        <img src="../upload/{{blog.image}}" alt="detail" />
        <p>
          {{blog.content}}
        </p>
      </div>
    </div>
  </body>
</html>
